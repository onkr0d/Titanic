# Development stage with cargo-watch for hot reloading
FROM rust:1.82-alpine

# Install required packages for building and development
RUN apk add --no-cache \
    musl-dev \
    openssl-dev \
    pkgconfig \
    cargo-watch \
    perl \
    make

# Create app directory
WORKDIR /app

# Copy manifest files first (for better layer caching)
COPY Cargo.toml Cargo.lock ./

# Create dummy source to build dependencies (this layer gets cached)
RUN mkdir -p src && echo "fn main() {}" > src/main.rs

# Build dependencies only (cached if Cargo.toml/Cargo.lock don't change)
RUN cargo build --release

# Remove dummy binary to force rebuild of actual code
RUN rm -rf target/release/deps/titanic* target/release/titanic

# Copy actual source code (changes frequently, so this layer rebuilds often)
COPY src ./src

# Create data directory
RUN mkdir -p /data/media

# Expose port
EXPOSE 3029

# Use cargo-watch for hot reloading during development
CMD ["cargo", "watch", "-x", "run"]